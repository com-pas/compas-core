			<xs:field xpath="@substationName"/>
		</xs:keyref>
		<xs:key name="ConnectivityNodeKey">
			<xs:selector xpath=".//scl:ConnectivityNode"/>
			<xs:field xpath="@pathName"/>
		</xs:key>
	</xs:element>
